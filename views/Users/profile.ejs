<% layout('/layouts/boilerplate.ejs') -%>
<body class="bg-light">
  <div class="container py-5">
    <div class="row justify-content-center">
      <div class="col-md-6">
        <div class="card shadow rounded border-0" style="background: #fff;">
          <div class="card-body text-center p-5">
            <div class="mb-4">
              <img 
                src="<%= user.profileImage %>" 
                alt="Profile Image" 
                class="rounded-circle border border-3 border-primary" 
                style="width: 140px; height: 140px; object-fit: cover;"
              >
            </div>
            <h2 class="fw-bold mb-2"><%= user.username %></h2>
            <p class="text-secondary mb-4" style="font-size: 1.1rem;">
              <i class="bi bi-envelope-fill me-2"></i><%= user.email %>
            </p>
            <!-- Optional: Add a small bio or edit button -->
            <!--<p class="text-muted">This is your user bio or additional info.</p>-->
            <!--<a href="/profile/edit" class="btn btn-primary btn-sm mt-3">Edit Profile</a>-->
          </div>
        </div>
      </div>
    </div>
  </div>
</body>
