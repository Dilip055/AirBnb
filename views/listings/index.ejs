<%- layout('layouts/boilerplate') %>
<body class="bg-light">
  <div class="container py-5">
    <h1 class="mb-4">All Listings</h1>

    <div class="row">
      <% listings.forEach(listing => { %>
        <div class="col-md-6 col-lg-4 mb-4">
          <div class="card h-100 shadow-sm rounded-4">
            <a href="/listings/<%= listing._id %>">
              <img src="<%= listing.image %>" class="card-img-top" alt="<%= listing.title %>" style="height: 200px; object-fit: cover;">
            </a>
            <div class="card-body d-flex flex-column">
              <h5 class="card-title"><%= listing.title %></h5>
              <p class="card-text text-muted"><strong>Location:</strong> <%= listing.location %>, <%= listing.country %></p>
              <p class="card-text"><strong>Price:</strong> $<%= listing.price %></p>

              
            </div>
          </div>
        </div>
      <% }) %>
    </div>
  </div>
</body>
