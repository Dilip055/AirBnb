<%- layout('layouts/boilerplate') %>
<body class="bg-light">
  <div class="container py-5">
    <div class="row justify-content-center">
      <div class="col-md-8 col-lg-6">
        <div class="card border-0 shadow-sm rounded-4 p-4">
          <h2 class="mb-4 text-center" style="color: #FF385C;">Edit Listing</h2>

          <form action="/listings/<%= listing._id %>/edit?_method=PUT" method="POST" enctype="multipart/form-data">
            
            <div class="mb-3">
              <label for="title" class="form-label fw-semibold">Title</label>
              <input type="text" id="title" name="title" value="<%= listing.title %>" class="form-control" required>
            </div>

            <div class="mb-3">
              <label for="description" class="form-label fw-semibold">Description</label>
              <textarea id="description" name="description" class="form-control" rows="4" required><%= listing.description %></textarea>
            </div>

            <div class="mb-3">
              <label class="form-label fw-semibold">Current Image</label><br>
              <img src="<%= listing.image %>" alt="Current Image" class="img-fluid rounded mb-2" style="max-height: 200px;">
            </div>

            <div class="mb-3">
              <label for="image" class="form-label fw-semibold">Replace Image (optional)</label>
              <input type="file" id="image" name="image" class="form-control">
            </div>

            <div class="mb-3">
              <label for="price" class="form-label fw-semibold">Price</label>
              <input type="number" id="price" name="price" value="<%= listing.price %>" class="form-control" required>
            </div>

            <div class="mb-3">
              <label for="country" class="form-label fw-semibold">Country</label>
              <input type="text" id="country" name="country" value="<%= listing.country %>" class="form-control" required>
            </div>

            <div class="mb-3">
              <label for="location" class="form-label fw-semibold">Location</label>
              <input type="text" id="location" name="location" value="<%= listing.location %>" class="form-control" required>
            </div>

            <div class="text-center mt-4">
              <button type="submit" class="btn btn-lg" style="background-color: #FF385C; color: white;">Update Listing</button>
              <a href="/listings/<%= listing._id %>" class="btn btn-outline-secondary ms-2">Back to Listing</a>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</body>
